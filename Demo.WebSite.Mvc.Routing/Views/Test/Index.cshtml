@using System.Web.Mvc.Html
@model IList<Demo.WebSite.Mvc.Routing.Controllers.Person>

@{
	ViewBag.Title = "Index";
}

@using (Html.BeginForm("Submit", "Test", FormMethod.Post))
{
	<table class="table table-striped table-condensed table-bordered">
		<thead>
			<tr>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Is Supervisor?</th>
			</tr>
		</thead>
		<tbody>
			@for (int i = 0; i < Model.Count; i++)
			{
				<tr>
					@Html.HiddenFor(m => Model[i].PersonId)
					<td>@Html.EditorFor(m => Model[i].FirstName)</td>
					<td>@Html.EditorFor(m => Model[i].LastName)</td>
					<td>@Html.CheckBoxFor(m => Model[i].IsSupervisor)</td>
				</tr>
			}
		</tbody>
	</table>

	<input class="btn btn-primary" type="submit" value="Submit Users" />
}


