@using System.Web.Mvc.Html
@model IList<Demo.WebSite.Mvc.Routing.Controllers.Person>

@{
	ViewBag.Title = "Index";
}

@using (Html.BeginForm("Submit", "Test", FormMethod.Post))
{
	<table>
		<thead>
			<tr>
				<th>First Name</th>
				<th>Last Name</th>
				<th>Is Supervisor?</th>
			</tr>
		</thead>
		<tbody>
			@for (int i = 0; i < Model.Count; i++)
			{
				<tr>
					<td>@Html.HiddenFor(m => Model[i].PersonId)</td>
					<td>@Html.EditorFor(m => Model[i].FirstName)</td>
					<td>@Html.EditorFor(m => Model[i].LastName)</td>
					<td>@Html.CheckBoxFor(m => Model[i].IsSupervisor)</td>
				</tr>
			}
		</tbody>
	</table>

	<input type="submit" value="Submit Users" />
}


